@model ismaildenzzz.Admin.Models.SearchModel
@using ismaildenzzz.Admin.Controllers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUI.cshtml";
}

<!-- Blog Entries Column -->
<div class="col-md-8">

    <h3 class="my-4">
        için arama sonuçları '@Model.SearchKey'
    </h3>


    @foreach (var item in Model.BlogList)
    {
        <!-- Blog Post -->
        <div class="card mb-4">
            @*<img class="card-img-top" src="@item.Resim" alt="@item.Baslik" height="250">*@
            <div class="card-body">
                <a href="/@item.SeoLink" style="color:black;"><h4 class="card-title">@item.Baslik</h4></a>
                <p class="card-text">@item.KisaAciklama</p>
                <a href="http://ismaildenzzz.com/post/@item.SeoLink">http://ismaildenzzz.com/post/@item.SeoLink</a>
                @*<a href="/Home/Blog/@item.SeoLink" class="btn btn-primary">Daha Fazla &rarr;</a>*@
            </div>
        </div>
    }

