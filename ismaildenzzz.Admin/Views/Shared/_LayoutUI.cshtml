<!DOCTYPE html>
<html lang="en" itemscope itemtype="http://schema.org/Article">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <META HTTP-EQUIV="CONTENT-LANGUAGE" CONTENT="Turkish">
    <meta name="title" content="@ViewBag.Title" />
    <meta name="description" content="@ViewBag.SeoDesc">
    <meta name="keywords" content="@ViewBag.SeoKeys" />
    <meta name="author" content="İsmail Deniz">
    <meta name="owner" content="İsmail Deniz" />
    <meta name="copyright" content="(c) 2017" />
    <meta name="robots" content="all" />
    <meta name="rating" content="general" />
    <meta name="serp-rank" position="1" />

    <!-- Schema.org markup for Google+ -->
    <meta itemprop="name" content="@ViewBag.SocialTitle">
    <meta itemprop="description" content="@ViewBag.SocialDescription">
    <meta itemprop="image" content="@ViewBag.SocialImage">

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="@ViewBag.SocialImage">
    <meta name="twitter:site" content="@ViewBag.SocialUrl">
    <meta name="twitter:title" content="@ViewBag.SocialTitle">
    <meta name="twitter:description" content="@ViewBag.SocialDescription">
    <meta name="twitter:creator" content="İsmail Deniz">
    <!-- Twitter summary card with large image must be at least 280x150px -->
    <meta name="twitter:image:src" content="@ViewBag.SocialImage">

    <!-- Open Graph data -->
    <meta property="og:title" content="@ViewBag.SocialTitle" />
    <meta property="og:type" content="@ViewBag.SocialType" />
    <meta property="og:url" content="@ViewBag.SocialUrl" />
    <meta property="og:image" content="@ViewBag.SocialImage" />
    <meta property="og:description" content="@ViewBag.SocialDescription" />
    <meta property="og:site_name" content="İsmail Deniz" />
    <meta property="article:published_time" content="@ViewBag.SocialPublishedTime" />
    <meta property="article:modified_time" content="@ViewBag.SocialPublishedTime" />
    <meta property="article:section" content="Software,Electronic,Web Master,Mobile Development" />
    <meta property="article:tag" content="@ViewBag.SocialArticleTags" />


    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/LayoutUI_UstJS")
    @Styles.Render("~/bundles/LayoutUI_UstCSS")
    <style>
        .card {
            border-radius: 0 !important;
        }

        .divResult {
            clear: both;
        }

        ul.category li a {
            color: black;
            text-decoration: none;
        }

            ul.category li a:hover {
                color: #3498db;
            }

        div.tags ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            div.tags ul li {
                display: inline-block;
                margin: 1px;
                border: none;
                padding: 0;
                margin-bottom: 3px;
            }

                div.tags ul li a {
                    padding: .25rem 0.5rem;
                    background-color: #343a40;
                    color: #fff;
                    display: block;
                    text-decoration: none;
                }

                    div.tags ul li a:hover {
                        border: 1px solid #343a40;
                        background: #fff;
                        color: #343a40 !important;
                    }
    </style>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-82401166-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-82401166-1');
    </script>
    <script>hljs.initHighlightingOnLoad();</script>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="text/css" />
    @*Facebook paylaşım JS kodu *@
    <script>
        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = 'https://connect.facebook.net/tr_TR/sdk.js#xfbml=1&version=v2.11&appId=1821267884610685';
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    @*Twitter paylaşım JS kodu *@
    <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
    @*Linkedln paylaşım JS kodu *@
    <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
</head>
<body>
    @Html.Partial("_NavMenuPartialUI")
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            @RenderBody()
            <!-- Sidebar Widgets Column -->
            @Html.Partial("_RightMenuPartialUI")
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-2 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; ismaildenzzz.com 2017</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script>
        $(document).ready(function () {
            $("ul.pagination").addClass("justify-content-center mb-4");
            $("ul.pagination li").addClass("page-item");
            $("ul.pagination li a").addClass("page-link");
        });
    </script>
    @Scripts.Render("~/bundles/LayoutUI_AltJS")
</body>
</html>
