<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <META HTTP-EQUIV="CONTENT-LANGUAGE" CONTENT="Turkish">
    <meta name="title" content="" />
    <meta name="description" content="@ViewBag.SeoDesc">
    <meta name="keywords" content="@ViewBag.SeoKeys" />
    <meta name="author" content="İsmail Deniz">
    <meta name="owner" content="ismaildenzzz" />
    <meta name="copyright" content="(c) 2017" />
    <meta name="robots" content="all" />
    <meta name="rating" content="general" />
    <meta name="serp-rank" position="1" />

    <title>@ViewBag.Title</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    @Scripts.Render("~/bundles/LayoutUI_UstJS")
    @Styles.Render("~/bundles/LayoutUI_UstCSS")

    <link href="~/ContentUser/css/hoverEffect.css" rel="stylesheet" />
    <style>
        .card {
            border-radius: 0 !important;
        }

        .divResult {
            clear: both;
        }

        ul.category li a {
            color: black;
            text-decoration: none;
        }

            ul.category li a:hover {
                color: #3498db;
            }

        div.tags ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            div.tags ul li {
                display: inline-block;
                margin: 1px;
                border: none;
                padding: 0;
                margin-bottom: 3px;
            }

                div.tags ul li a {
                    padding: .25rem 0.5rem;
                    background-color: #343a40;
                    color: #fff;
                    display: block;
                    text-decoration: none;
                }

                    div.tags ul li a:hover {
                        border: 1px solid #343a40;
                        background: #fff;
                        color: #343a40 !important;
                    }
    </style>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-82401166-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-82401166-1');
    </script>
    <script>hljs.initHighlightingOnLoad();</script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="text/css" />
    @*<script src="~/ContentUser/js/app.js"></script>*@

</head>
<body>
    @Html.Partial("_NavMenuPartialUI")
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            @RenderBody()
            <!-- Sidebar Widgets Column -->
            @Html.Partial("_RightMenuPartialUI")
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-2 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; ismaildenzzz.com 2017</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script>
        $(document).ready(function () {
            $("ul.pagination").addClass("justify-content-center mb-4");
            $("ul.pagination li").addClass("page-item");
            $("ul.pagination li a").addClass("page-link");
        });
    </script>
    @Scripts.Render("~/bundles/LayoutUI_AltJS")
</body>
</html>
