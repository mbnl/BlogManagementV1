
@{ 
    int i = 0,j = 0;
}
<style>
    .divResult {
        clear: both;
    }
</style>

<div class="col-md-4">
    <!-- Search Widget -->
    <div class="card my-4">
        <h5 class="card-header">Arama</h5>
        <div class="card-body">

            <form method="get" action="/search">
                <div class="input-group">
                    <input type="text" class="form-control" name="q" id="q" placeholder="Sana ne lazım...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" id="srcButton" type="submit">Haydi!</button>
                    </span>
                </div>
            </form>

        </div>
    </div>
    <!-- Categories Widget -->
    <div class="card my-4">
        <h5 class="card-header">Kategoriler</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var item in ViewBag.Kategoris)
                        {
                            <li>
                                <a href="/kategori/@item.KategoriLink">@item.KategoriAdi - @ViewBag.KategoriPostSayilari[i]</a>
                            </li>
                            i++;
                        }

                    </ul>
                </div>
            </div>

        </div>
    </div>

    <!-- Categories Widget -->
    <div class="card my-4">
        <h5 class="card-header">Etiket Bulutu</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="tagcloud03">
                        <ul>
                            @foreach (var item in ViewBag.Etikets)
                            {
                                <li>
                                    <a href="/etiket/@item.EtiketLink">@item.EtiketAdi<span>@ViewBag.EtiketPostSayilari[j]</span></a>
                                </li>
                                j++;
                            }

                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>






